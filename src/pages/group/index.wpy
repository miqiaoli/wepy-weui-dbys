<script>
import wepy from 'wepy'
import {
  __getApi
} from '../../config.js'
import http from '../../utils/Http'

export default class GroupIndex extends wepy.page {
  config = {
    navigationBarTitleText: '牛人圈',
  };
  data = {
    background: ['demo-text-1', 'demo-text-2', 'demo-text-3'],
    indicatorDots: false,
    vertical: false,
    autoplay: true,
    interval: 2000,
    duration: 500,
    toView: 'green',
    imgHost: 'https://www.otimes.com',
    replayList: [],
    hotNewsList: [],
    productList: [],
    swipers: [],
    keyword: '',
  };
  methods = {
    search(e){
      this.keyword = e.detail.value
      wx.navigateTo({
        url: `./list?keyword=${e.detail.value}`
      })
    },
    toList(e) {
      const index = e.currentTarget.dataset.tag
      wx.navigateTo({
        url: `./list?index=${index}`
      })
    },
    toNewsDls(e) {
      const id = e.currentTarget.dataset.id
      wx.navigateTo({
        url: `./news?id=${id}`
      })
    },
    toPlay(e) {
      const id = e.currentTarget.dataset.id
      wx.navigateTo({
        url: `./video?id=${id}`
      })
    },
  }
  onLoad() {
    this.getADList()
    this.getReplayList()
    this.getProduct() 
    this.getHotNews()
  }
  async getHotNews() {
    const res = await http.get(__getApi._getHotNews, {
      type_id: 7,
      page_id: 1,
      page_limit: 4,
    })
    if (res.meta.success) {
      this.hotNewsList = res.data.list
    }
  }
  async getADList() {
    const res = await http.get(__getApi._getADList, {
      ad_Model_id: 11
    })
    if (res.false) return
    this.swipers = res.data.reverse()
    this.$apply()
  }
  async getReplayList() {
    const res = await http.post(__getApi._getSelfVideoList, {
      page_id: 1,
      page_limit: 2,
    })
    if (res.meta.success) {
      this.replayList = res.data.list
      this.$apply()
    }
  }
  async getProduct() {
    const res = await http.post(__getApi._getNewsProductList, {
      id: 96,
      page_id: 1,
      page_limit: 3,
    })
    if (res.meta.success) {
      this.productList = res.data.list 
      this.$apply()
    }
  }
}
</script>

